class Data
{
    private String name;   //two private variables 
    private int age;
    
    public void setname(String n)  //to demo encapsulation best way is to call them using getters and setters
    {
        name = n;
    }
    
    public String getname()
    {
        return name;
    }
    
    
}


class Main {
    public static void main(String[] args) {
        Data d = new Data();
        d.setname("Ahad");
        System.out.println(d.getname());
       
    }
}

//this keyword 



class Person {
    String name;
    int age;

    // Constructor
    public Person(String name, int age) {
        this.name = name;  // 'this.name' refers to the instance variable, 'name' refers to the parameter
        this.age = age;    // 'this.age' refers to the instance variable, 'age' refers to the parameter
    }

    public void displayInfo() {
        System.out.println("Name: " + this.name);
        System.out.println("Age: " + this.age);
    }
}

public class Main {
    public static void main(String[] args) {
        Person person1 = new Person("Alice", 30);
        person1.displayInfo();  // Output: Name: Alice, Age: 30
    }
}


